{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2015", "dom", "es2015.promise"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    }
}